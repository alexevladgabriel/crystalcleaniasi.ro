---
import { changeLanguage } from "i18next";
import Gallery from "../components/svelte/Gallery.svelte";
import Layout from "../layouts/Layout.astro";
import images from "../assets/data.json";

changeLanguage("ro");
---

<Layout title="Portofoliu">
  <section class="p-2 md:p-0 lg:p-16">
    <main class="mx-auto max-w-7xl">
      <div class="mt-6">
        <div class="text-2xl font-bold text-gray-800">Portofoliu</div>
        <div class="text-gray-600">Aici puteți vedea câteva dintre lucrările noastre.</div>
      </div>
      <Gallery results={images} client:idle />
    </main>
  </section>
</Layout>
