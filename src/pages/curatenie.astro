---
import { changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import Svg from "@jasikpark/astro-svg-loader";

changeLanguage("ro");

const services = [
  {
    name: "General\u0103",
    slug: "/generala",
    class: "absolute top-4 right-5 h-24 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/bloom.svg?raw`),
  },
  {
    name: "Apartamente & Vile",
    slug: "/apartamente-vile",
    class: "absolute top-4 right-5 h-24 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/house.svg?raw`),
  },
  {
    name: "Societ\u0103\u021Bi & asocia\u021Bii",
    slug: "/societati-asociatii",
    class: "absolute top-4 right-5 h-24 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/buildings.svg?raw`),
  },
  {
    name: "Dup\u0103 constructor",
    slug: "/dupa-constructor",
    class: "absolute top-4 right-5 h-24 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/builder.svg?raw`),
  },
  {
    name: "Pardoseli & covoare",
    slug: "/pardoseli-covoare",
    class: "absolute top-4 right-5 h-24 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/floors.svg?raw`),
  },
  {
    name: "Exterioar\u0103",
    slug: "/exterioara",
    class: "absolute top-3 right-5 h-24 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/leaf.svg?raw`),
  },
  {
    name: "Tapi\u021B\u0103rie auto",
    slug: "/tapitarie-auto",
    class: "absolute top-9 right-5 h-16 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/car.svg?raw`),
  },
  {
    name: "Ecologic\u0103 cu aburi",
    slug: "/ecologie-cu-aburi",
    class: "absolute top-6 right-5 h-20 opacity-20",
    price: "-",
    image: import(`../assets/imgs/services/eco-steam.svg?raw`),
  },
];
---

<!--                    Începând de la
                    <h2 class="text-xl font-bold uppercase">
                      {service.price} lei / m<sup>2</sup>
                    </h2> -->
<Layout title="Curatenie">
  <section class="p-2 md:p-0 lg:p-16">
    <main class="mx-auto max-w-7xl">
      <div class="mt-6 grid grid-cols-1 gap-6 md:grid-cols-3">
        <div class="text-2xl font-bold text-gray-800">Curățenie</div>
        <div class="col-span-2 grid gap-4 md:grid-cols-2">
          {
            services.map((service) => (
              <a href={"/curatenie" + service.slug} target="_blank">
                <div class="group relative grid h-32 grid-cols-2 place-content-center rounded-lg bg-blue-500 p-8 text-white hover:bg-blue-600">
                  <h2 class="text-left text-2xl font-bold uppercase">{service.name}</h2>
                  <div />
                  <Svg class={service.class} src={service.image} />
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </main>
  </section>
</Layout>
