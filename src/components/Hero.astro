</section>

<style is:global>
  .typed-cursor {
    @apply text-amber-500;
  }
</style>

<script>
  import Typed from "typed.js";

  const el = document.getElementById("typed");
  const strings = el?.dataset.messages!.split(",") || [];

  new Typed("#typed", {
    strings,
    typeSpeed: 100,
    backSpeed: 100,
    smartBackspace: true,
    fadeOut: true,
    fadeOutDelay: 200,
    showCursor: true,
    cursorChar: "_",
    loop: true,
  });
</script>
